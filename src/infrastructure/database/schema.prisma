generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tag {
  id     String @id @default(uuid())
  title  String
  tasks  Task   @relation(fields: [taskId], references: [id])
  taskId String
}

model Task {
  id          String  @id @default(uuid())
  title       String
  description String
  priority    Int
  isDone      Boolean
  tags        Tag[]
}
